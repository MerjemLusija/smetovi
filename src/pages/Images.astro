---
import PageLayout from "../layouts/PageLayout.astro";

const images = [
  "/images/slike/_smetoviImage1.png",
  "/images/slike/_smetoviImage2.png",
  "/images/slike/_smetoviImage3.png",
  "/images/slike/_smetoviImage4.png",
  "/images/slike/_smetoviImage5.png",
  "/images/slike/_smetoviImage6.png",
  "/tmp-images/Monument.jpg",
  "/tmp-images/Fox.jpg",
  "/tmp-images/BlogPost.jpg"
];
---

<PageLayout>
  <main class="imagesMain">
    <div class="gallery-header fade slide-bottom observed">
      <h1 class="text-4xl md:text-5xl font-exo2 font-bold text-sky-950 mb-2">Galerija Smetova</h1>
      <div class="ttl-sep w-20 h-1 bg-orange-500 mb-8"></div>
    </div>
    <div class="gallery-grid">
      {images.map((img, index) => (
        <div class="gallery-item observed fade slide-bottom" style={`transition-delay: ${index * 50}ms`}>
          <img src={img} alt={`Smetovi slika ${index + 1}`} class="gallery-img" data-src={img} />
          <div class="overlay">
            <i class="fa-solid fa-expand text-white text-3xl"></i>
          </div>
        </div>
      ))}
    </div>
  </main>

  <!-- Lightbox Modal -->
  <div id="lightbox" class="lightbox">
    <span class="close-lightbox">&times;</span>
    <img class="lightbox-content" id="lightbox-img">
  </div>
</PageLayout>

<style>
  body {
    margin: 0;
    font-family: 'Exo 2', sans-serif;
    background: #f8fafc; /* light slate background */
  }

  .imagesMain {
    padding: 8rem 2rem 4rem; /* Top padding gives space from header */
    max-width: 1400px;
    margin: auto;
    min-height: 100vh;
  }

  .gallery-header {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 2rem;
  }

  /* Masonry-like CSS Grid approach */
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    grid-auto-rows: 250px;
    grid-gap: 20px;
    grid-auto-flow: dense;
  }

  /* Make some items span 2 rows for masonry effect */
  .gallery-item:nth-child(2n) {
    grid-row: span 2;
  }
  .gallery-item:nth-child(5n) {
    grid-column: span 2;
    grid-row: span 2;
  }

  .gallery-item {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    cursor: pointer;
    background: #fff;
  }

  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: rgba(8, 47, 73, 0.6); /* sky-950 with opacity */
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .gallery-item:hover img {
    transform: scale(1.08);
  }

  .gallery-item:hover .overlay {
    opacity: 1;
  }

  /* Animations */
  .fade {
    opacity: 0;
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  .slide-bottom {
    transform: translateY(40px);
  }
  .show {
    opacity: 1;
    transform: translateY(0);
  }

  /* Lightbox Styles */
  .lightbox {
    display: none; 
    position: fixed;
    z-index: 9999;
    padding-top: 50px;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    background-color: rgba(0,0,0,0.9);
    backdrop-filter: blur(5px);
  }

  .lightbox-content {
    margin: auto;
    display: block;
    max-width: 90%;
    max-height: 85vh;
    object-fit: contain;
    animation-name: zoom;
    animation-duration: 0.4s;
    border-radius: 8px;
    box-shadow: 0 0 40px rgba(0,0,0,0.5);
  }

  @keyframes zoom {
    from {transform:scale(0.8); opacity: 0;} 
    to {transform:scale(1); opacity: 1;}
  }

  .close-lightbox {
    position: absolute;
    top: 20px;
    right: 35px;
    color: #f1f1f1;
    font-size: 50px;
    font-weight: bold;
    transition: 0.3s;
    cursor: pointer;
  }

  .close-lightbox:hover,
  .close-lightbox:focus {
    color: #fec84d; /* yellow-500 from your theme */
    text-decoration: none;
    cursor: pointer;
    transform: scale(1.1);
  }

  @media (max-width: 600px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }
    .gallery-item:nth-child(n) {
      grid-row: span 1;
      grid-column: span 1;
    }
  }
</style>

<script>
  // Scroll Reveal Observer
  document.addEventListener("DOMContentLoaded", () => {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("show");
          observer.unobserve(entry.target); // only animate once
        }
      });
    }, { threshold: 0.1 });

    document.querySelectorAll(".observed").forEach((el) => observer.observe(el));

    // Lightbox Logic
    const modal = document.getElementById("lightbox");
    const modalImg = document.getElementById("lightbox-img");
    const closeBtn = document.getElementsByClassName("close-lightbox")[0];
    const galleryImages = document.querySelectorAll(".gallery-img");
    const overlays = document.querySelectorAll(".overlay");

    const openModal = (src) => {
      if(modal && modalImg) {
        modal.style.display = "flex";
        modalImg.src = src;
        document.body.style.overflow = "hidden"; // Prevent background scrolling
      }
    };

    galleryImages.forEach(img => {
      img.addEventListener("click", function() {
        openModal(this.dataset.src);
      });
    });

    overlays.forEach(overlay => {
      overlay.addEventListener("click", function() {
        const img = this.previousElementSibling;
        if(img) openModal(img.dataset.src);
      });
    });

    if(closeBtn) {
      closeBtn.addEventListener("click", function() {
        if(modal) {
          modal.style.display = "none";
          document.body.style.overflow = "auto";
        }
      });
    }

    // Close on background click
    window.addEventListener("click", function(event) {
      if (event.target == modal) {
        if(modal) {
          modal.style.display = "none";
          document.body.style.overflow = "auto";
        }
      }
    });

    // Close on Escape key
    document.addEventListener('keydown', function(event) {
      if(event.key === "Escape" && modal && modal.style.display === "flex") {
        modal.style.display = "none";
        document.body.style.overflow = "auto";
      }
    });
  });
</script>
